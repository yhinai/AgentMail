# ============================================
# CORE SERVICES
# ============================================

# OpenAI (Required for AI analysis and responses)
OPENAI_API_KEY=sk-proj-your_openai_key_here
OPENAI_MODEL=gpt-4o-mini

# Convex (Required for database)
CONVEX_URL=https://your-deployment.convex.cloud
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# ============================================
# AGENTMAIL EMAIL AUTOMATION
# ============================================

# AgentMail (Required for email automation)
AGENTMAIL_API_KEY=am_your_agentmail_key_here

# Email Processing Configuration
AUTO_RESPOND=true
EMAIL_POLL_INTERVAL=30
EMAIL_RESPONSE_DELAY=5

# Webhook Configuration (Optional - for instant delivery)
WEBHOOK_URL=https://your-domain.com/api/webhooks/email
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# AUTOBAZAAR INTEGRATIONS (Optional)
# ============================================

# Browser-Use (Web automation)
BROWSER_USE_API_KEY=your_browser_use_key_here

# Hyperspell (Memory system)
HYPERSPELL_API_KEY=your_hyperspell_key_here
HYPERSPELL_API_URL=https://api.hyperspell.com/v1

# Perplexity (Market research)
PERPLEXITY_API_KEY=your_perplexity_key_here

# Composio (Marketplace APIs)
COMPOSIO_API_KEY=your_composio_key_here

# ============================================
# BACKEND INFRASTRUCTURE (Optional)
# ============================================

# Redis (For queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
ENABLE_BROWSER_SCRAPING=false
ENABLE_AUTO_NEGOTIATION=false
ENABLE_AUTO_LISTING=false
