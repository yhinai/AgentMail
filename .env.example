# ============================================
# AGENTMAIL CONFIGURATION
# ============================================
# Your AgentMail API credentials
AGENTMAIL_API_KEY=your_agentmail_api_key_here
AGENTMAIL_API_URL=https://api.agentmail.to/v0
# Email address that AgentMail monitors
AGENTMAIL_EMAIL=your-business-email@example.com

# ============================================
# OPENAI CONFIGURATION
# ============================================
# OpenAI API key for GPT-4 email analysis and response generation
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ============================================
# BROWSER-USE CONFIGURATION
# ============================================
# Browser-Use API for automated listing creation
BROWSER_USE_API_KEY=your_browser_use_api_key_here
BROWSER_USE_API_URL=https://api.browser-use.com/v1

# ============================================
# HYPERSPELL CONFIGURATION
# ============================================
# Hyperspell for buyer memory and context management
HYPERSPELL_API_KEY=your_hyperspell_api_key_here
HYPERSPELL_API_URL=https://api.hyperspell.com/v1

# ============================================
# PERPLEXITY CONFIGURATION
# ============================================
# Perplexity API for real-time market intelligence
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================
# CONVEX CONFIGURATION
# ============================================
# Convex deployment URL (get from `npx convex dev`)
CONVEX_DEPLOYMENT=dev
CONVEX_URL=https://your-project.convex.cloud
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment (development, staging, production)
NODE_ENV=development

# Port for Next.js UI server
PORT=3000

# Webhook secret for validating incoming AgentMail webhooks (optional but recommended)
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# OPTIONAL: EMAIL PROCESSING CONFIGURATION
# ============================================
# Polling interval in seconds (if not using webhooks)
EMAIL_POLL_INTERVAL=30

# Maximum number of emails to process in one batch
EMAIL_BATCH_SIZE=10

# Email response delay in seconds (to appear more human)
EMAIL_RESPONSE_DELAY=5

# Enable/disable automatic responses (set to 'false' for manual approval mode)
AUTO_RESPOND=true

# ============================================
# OPTIONAL: DEMO/TESTING CONFIGURATION
# ============================================
# Enable demo mode with mock data
DEMO_MODE=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info
